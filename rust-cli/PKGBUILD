# PKGDEST=/tmp makepkg -R --sign
pkgname=rust-cli
pkgver=20190604
pkgrel=1
pkgdesc='List of nice cli written in rust and compiled via cargo (nightly)'
arch=('x86_64')
license=('MIT')
depends=()
makedepends=()
source=()
sha256sums=()

# => cargo +nightly install $_pkg
# Note: hunter is bundled with preview-gen and bugs out
#       git-global bugs out too

_cli=(bingrep broot cw diskus dupe-krill fastmod genact gig git-find git-global hunter preview-gen hyperfine jql lolcate mprober procs rip runiq ruplacer sd slink sn strace-analyzer tree-rs ttdl xcompress xcp xsv)
_pkg=($_cli tabwriter-bin fst-bin)
_clibin=($_cli tabwriter fst)

package() {
  install -Dm755 -t "$pkgdir"/usr/bin/ "${_clibin[@]/#/${CARGO_HOME}/bin/}"
}

